[MASTER]
ignore-paths=ecgarr/rpc/GenericDataOperations_EvbToPc,  # Ignore as autogenerated
             ecgarr/rpc/GenericDataOperations_PcToEvb,  # Ignore as autogenerated
             ecgarr/models  # Ignore for not till replace all TF 1.x

extension-pkg-whitelist=pydantic

[MESSAGES CONTROL]

disable=unused-argument,
        missing-module-docstring,
        too-few-public-methods,
        invalid-name,
        logging-fstring-interpolation,
        duplicate-code

[FORMAT]
max-line-length=140

[DESIGN]

# Maximum number of arguments for function / method
max-args=10

# Maximum number of locals for function / method body
max-locals=30

# Maximum number of statements in function / method body
max-statements=80
